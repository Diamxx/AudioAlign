<Window x:Class="AudioAlign.AlignmentGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Alignment Graph" Height="550" Width="950"
        FontSize="11" 
        Background="{StaticResource WindowBackgroundBrush}" WindowStyle="ToolWindow" Loaded="Window_Loaded">
    <Grid>
        <oxy:Plot Name="plotter">
            <!--<oxy:Plot.Series>
                <oxy:LineSeries ItemsSource="{Binding Points}"/>
            </oxy:Plot.Series>-->
            <oxy:Plot.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy to clipboard" Click="MenuItemCopyToClipboard_Click"/>
                </ContextMenu>
            </oxy:Plot.ContextMenu>
        </oxy:Plot>
    </Grid>
</Window>
