<Window x:Class="AudioAlign.AlignmentGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        Title="Alignment Graph" Height="550" Width="950"
        FontSize="11" 
        Background="{StaticResource WindowBackgroundBrush}" WindowStyle="ToolWindow" Loaded="Window_Loaded">
    <Grid>
        <d3:ChartPlotter Name="plotter">
            <d3:ChartPlotter.Style>
                <Style>
                    <Setter Property="Control.Background" Value="White"/>
                    <Setter Property="Control.Foreground" Value="Black"/>
                </Style>
            </d3:ChartPlotter.Style>
        </d3:ChartPlotter>
    </Grid>
</Window>
