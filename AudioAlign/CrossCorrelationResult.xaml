<Window x:Class="AudioAlign.CrossCorrelationResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:Aurio.WaveControls;assembly=Aurio.WaveControls"
        xmlns:local="clr-namespace:AudioAlign"
        xmlns:oxy="http://oxyplot.org/wpf"
        FontSize="11" 
        Title="Cross Correlation Result" Height="300" Width="689"
        Background="{StaticResource NormalBorderBrush}" WindowStyle="ToolWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <oxy:PlotView Grid.Column="0" Name="plotter1" Margin="3"/>
        <oxy:PlotView Grid.Column="1" Name="plotter2" Margin="3"/>
    </Grid>
</Window>
