<Window x:Class="AudioAlign.ModalProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Processing, please wait..." Height="83" Width="489"
        Background="{StaticResource WindowBackgroundBrush}"
        WindowStyle="ToolWindow" Loaded="Window_Loaded" Unloaded="Window_Unloaded" WindowStartupLocation="CenterOwner">
    <Grid>
        <ProgressBar Name="progressBar" />
        <Label VerticalContentAlignment="Center" VerticalAlignment="Stretch" Margin="6,0" FontSize="12">
            <TextBlock Name="progressBarLabel" TextTrimming="CharacterEllipsis" />
        </Label>
    </Grid>
</Window>
