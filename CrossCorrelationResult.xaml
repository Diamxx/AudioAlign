<Window x:Class="AudioAlign.CrossCorrelationResult"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:AudioAlign.WaveControls;assembly=AudioAlign.WaveControls"
        xmlns:local="clr-namespace:AudioAlign"
        xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
        FontSize="11" 
        Title="Cross Correlation Result" Height="300" Width="300"
        Background="{StaticResource NormalBorderBrush}" WindowStyle="ToolWindow">
    <Grid>
        <d3:ChartPlotter Grid.Column="1" Name="resultPlotter" Margin="3">
            <d3:ChartPlotter.Style>
                <Style>
                    <Setter Property="Control.Background" Value="White"/>
                    <Setter Property="Control.Foreground" Value="Black"/>
                </Style>
            </d3:ChartPlotter.Style>
        </d3:ChartPlotter>
    </Grid>
</Window>
