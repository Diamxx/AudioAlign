<Window x:Class="AudioAlign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wc="clr-namespace:AudioAlign.WaveControls;assembly=AudioAlign.WaveControls"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="434" Width="650">
    <Window.Resources>
        <wc:LogTransformConverter x:Key="LogTransformer"/>
    </Window.Resources>
    
    <Grid>
        <Button Content="Load Audio File" HorizontalAlignment="Left" Margin="12,0,0,12" Name="button1" Width="108" Height="23" VerticalAlignment="Bottom" Click="button1_Click" />
        <Border BorderBrush="Silver" BorderThickness="1" Name="border1" Margin="12,12,12,41">
            <DockPanel Height="auto" Name="dockPanel1" Width="auto" Background="LightGray">
                <ScrollBar Name="scrollBar1" Orientation="Horizontal" SmallChange="1" LargeChange="200" DockPanel.Dock="Bottom"
                           Minimum="0"
                           Maximum="{Binding ElementName=waveView, Path=TrackLength}"
                           ViewportSize="{Binding ElementName=waveView, Path=ViewportWidth}"/>
                <wc:WaveView Name="waveView" SnapsToDevicePixels="true"
                             ViewportOffset="{Binding ElementName=scrollBar1, Path=Value}" WaveformBackground="White" 
                             ViewportWidth="{Binding ElementName=slider1, Path=Value}"
                             ClipToBounds="True" />
            </DockPanel>
        </Border>
        <Slider Margin="175,0,12,12" Name="slider1" Height="23" VerticalAlignment="Bottom" Maximum="{Binding ElementName=waveView, Path=TrackLength}" Value="100" 
                TickPlacement="BottomRight" TickFrequency="5" SmallChange="1" AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="2" Minimum="1" />
        <Label Content="Zoom:" Margin="126,0,0,8" Height="28" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="43" />
    </Grid>
</Window>
