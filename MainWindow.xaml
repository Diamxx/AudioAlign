<Window x:Class="AudioAlign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wc="clr-namespace:AudioAlign.WaveControls;assembly=AudioAlign.WaveControls"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Load Audio File" HorizontalAlignment="Left" Margin="12,0,0,12" Name="button1" Width="108" Height="23" VerticalAlignment="Bottom" Click="button1_Click" />
        <Border BorderBrush="Silver" BorderThickness="1" Name="border1" Margin="12,12,12,41">
            <ScrollViewer Name="scrollViewer1" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                <wc:WaveView Name="waveView" SnapsToDevicePixels="true" 
                             ParentViewportHorizontalOffset="{Binding Path=HorizontalOffset, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}}"
                             ParentViewportWidth="{Binding Path=ViewportWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ScrollViewer}}}"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
