<Window x:Class="AudioAlign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wc="clr-namespace:AudioAlign.WaveControls;assembly=AudioAlign.WaveControls"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="350" Width="525">
    <Grid>
        <Button Content="Load Audio File" HorizontalAlignment="Left" Margin="12,0,0,12" Name="button1" Width="108" Height="23" VerticalAlignment="Bottom" Click="button1_Click" />
        <Border BorderBrush="Silver" BorderThickness="1" Name="border1" Margin="12,12,12,41">
            <DockPanel Height="auto" Name="dockPanel1" Width="auto" Background="LightGray">
                <ScrollBar Name="scrollBar1" Orientation="Horizontal" SmallChange="20" LargeChange="200" DockPanel.Dock="Bottom"
                           Minimum="0"
                           Maximum="{Binding ElementName=waveView, Path=VirtualWidth}"
                           ViewportSize="{Binding ElementName=waveView, Path=ActualWidth}"/>
                <wc:WaveView Name="waveView" SnapsToDevicePixels="true" 
                             VirtualHorizontalOffset="{Binding ElementName=scrollBar1, Path=Value}" WaveformBackground="White" />
            </DockPanel>
        </Border>
    </Grid>
</Window>
